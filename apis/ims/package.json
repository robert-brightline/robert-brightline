{
  "name": "@robert-brightline/ims",
  "description": "Inventory management system module",
  "version": "0.0.8",
  "author": {
    "name": "robert-brightline",
    "email": "robert.brightline+ims@gmail.com"
  },
  "homepage": "https://github.com/robert-brightline/robert-brightline.git/apis/ims",
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "keywords": [
    "inventory"
  ],
  "funding": [
    {
      "type": "cashapp",
      "url": "https://cash.app/$puqlib"
    }
  ],
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "@robert-brightline/source": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "assets",
    "!**/*.tsbuildinfo"
  ],
  "nx": {
    "sourceRoot": "apis/ims/src",
    "targets": {
      "build": {
        "executor": "@nx/js:swc",
        "outputs": [
          "{options.outputPath}"
        ],
        "options": {
          "outputPath": "apis/ims/dist",
          "main": "apis/ims/src/index.ts",
          "tsConfig": "apis/ims/tsconfig.lib.json",
          "skipTypeCheck": false,
          "stripLeadingPaths": true
        }
      },
      "serve": {
        "executor": "@nx/js:node",
        "options": {
          "buildTarget": "@robert-brightline/ims:build",
          "watch": true
        },
        "configurations": {
          "production": {
            "buildTarget": "@robert-brightline/ims:build:production",
            "watch": false
          }
        }
      }
    }
  },
  "peerDependencies": {
    "@nestjs/common": "^11.1.11",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.11",
    "@nestjs/platform-express": "^11.1.11",
    "@nestjs/swagger": "^11.2.3",
    "helmet": "^8.1.0"
  },
  "dependencies": {
    "@swc/helpers": "~0.5.11"
  },
  "devDependencies": {
    "vitest": "^4.0.8"
  }
}
