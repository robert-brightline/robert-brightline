{
  "name": "@robert-brightline/nest-common",
  "description": "Nestjs common utilities",
  "version": "0.0.23",
  "author": {
    "name": "robert-brightline",
    "email": "robert.brightline+nest-common@gmail.com",
    "url": "https://robert-brightline.github.io"
  },
  "homepage": "https://robert-brightline.github.io/libs/nest-common",
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "keywords": [
    ""
  ],
  "funding": [
    {
      "type": "cashapp",
      "url": "https://cash.app/$puqlib"
    }
  ],
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "@robert-brightline/source": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "assets",
    "!**/*.tsbuildinfo"
  ],
  "nx": {
    "sourceRoot": "libs/nest-common/src",
    "projectType": "library",
    "tags": [
      "scope:feature"
    ],
    "targets": {
      "build": {
        "executor": "@nx/js:swc",
        "outputs": [
          "{options.outputPath}"
        ],
        "options": {
          "outputPath": "libs/nest-common/dist",
          "main": "libs/nest-common/src/index.ts",
          "tsConfig": "libs/nest-common/tsconfig.lib.json",
          "skipTypeCheck": false,
          "stripLeadingPaths": true
        }
      }
    }
  },
  "peerDependencies": {
    "@nestjs/common": "^11.1.11",
    "@robert-brightline/types": "workspace:*",
    "@robert-brightline/errors": "workspace:*"
  },
  "dependencies": {
    "@swc/helpers": "~0.5.11"
  },
  "devDependencies": {
    "vitest": "^4.0.8"
  }
}
