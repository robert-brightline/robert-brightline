{
  "name": "@robert-brightline/crypto",
  "description": "Hasing and encription utilities",
  "version": "0.0.21",
  "author": {
    "name": "robert-brightline",
    "email": "robert.brightline+crypto@gmail.com",
    "url": "https://robert-brightline.github.io"
  },
  "homepage": "https://robert-brightline.github.io/libs/crypto",
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "keywords": [
    "hash",
    "encription",
    "security"
  ],
  "funding": [
    {
      "type": "cashapp",
      "url": "https://cash.app/$puqlib"
    }
  ],
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "@robert-brightline/source": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "assets",
    "!**/*.tsbuildinfo"
  ],
  "nx": {
    "sourceRoot": "libs/crypto/src",
    "projectType": "library",
    "tags": [
      "scope:feature"
    ],
    "targets": {
      "build": {
        "executor": "@nx/js:swc",
        "outputs": [
          "{options.outputPath}"
        ],
        "options": {
          "outputPath": "libs/crypto/dist",
          "main": "libs/crypto/src/index.ts",
          "tsConfig": "libs/crypto/tsconfig.lib.json",
          "skipTypeCheck": true,
          "stripLeadingPaths": true
        }
      }
    }
  },
  "dependencies": {
    "@swc/helpers": "~0.5.11",
    "bcrypt": "^6.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "vitest": "^4.0.8"
  }
}
