generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

generator zod {
  provider = "zod-prisma-types"
  output   = "../src/generated/zod"
}

model Product {
  id        Int       @id @default(autoincrement())
  uuid      String    @unique @default(uuid(7))
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  name        String  @unique
  description String?
  upc         String  @unique
  sku         String  @unique

  categoryId String?

  imagesId String?

  product  Product? @relation("variants", fields: [parentId], references: [id])
  parentId Int?

  variants Product[] @relation("variants")
}
