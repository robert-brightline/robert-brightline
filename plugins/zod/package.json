{
  "name": "@robert-brightline/zod",
  "description": "Common zod schemas and prisma zod schema generator",
  "version": "0.0.19",
  "author": {
    "name": "robert-brightline",
    "email": "robert.brightline+zod@gmail.com",
    "url": "https://robert-brightline.github.io"
  },
  "homepage": "https://robert-brightline.github.io/plugins/zod",
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "keywords": [
    "zod",
    "prisma",
    "generator",
    "plugin",
    "extention"
  ],
  "funding": [
    {
      "type": "cashapp",
      "url": "https://cash.app/$puqlib"
    }
  ],
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "@robert-brightline/source": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "bin": {
    "zod": "./bin/zod.mjs"
  },
  "files": [
    "dist",
    "bin",
    "assets",
    "!**/*.tsbuildinfo"
  ],
  "nx": {
    "sourceRoot": "plugins/zod/src",
    "projectType": "library",
    "targets": {
      "build": {
        "executor": "@nx/js:swc",
        "outputs": [
          "{options.outputPath}"
        ],
        "options": {
          "outputPath": "plugins/zod/dist",
          "main": "plugins/zod/src/index.ts",
          "tsConfig": "plugins/zod/tsconfig.lib.json",
          "skipTypeCheck": false,
          "stripLeadingPaths": true
        }
      }
    }
  },
  "dependencies": {
    "@prisma/client": "^7.2.0",
    "@prisma/generator-helper": "^7.2.0",
    "@robert-brightline/errors": "workspace:*",
    "@robert-brightline/names": "workspace:*",
    "@robert-brightline/types": "workspace:*",
    "@swc/helpers": "~0.5.11",
    "prettier": "~3.6.2",
    "zod": "^4.3.4"
  },
  "devDependencies": {
    "vitest": "^4.0.8"
  }
}
