{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "Project",
  "title": "",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "description": "Project type",
      "enum": [
        "api",
        "cli",
        "client",
        "client-library",
        "graphql",
        "library",
        "prisma"
      ],
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What project type would you like to use?"
    },
    "directory": {
      "type": "string",
      "description": "Project directory",
      "$default": {
        "$source": "argv",
        "index": 1
      },
      "x-prompt": "What directory would you like to use?"
    }
  },
  "required": [
    "type",
    "directory"
  ]
}