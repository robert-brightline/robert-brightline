{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "Resource",
  "title": "Generate project resources",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Resource name",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use?"
    },
    "type": {
      "type": "string",
      "description": "Resource type",
      "enum": [
        "controller",
        "event-emitter"
      ],
      "$default": {
        "$source": "argv",
        "index": 1
      },
      "x-prompt": "What type would you like to use?"
    },
    "project": {
      "type": "string",
      "description": "Target project name",
      "$default": {
        "$source": "argv",
        "index": 2
      },
      "x-prompt": "What project would you like to use?"
    }
  },
  "required": [
    "name",
    "type",
    "project"
  ]
}