{
  "name": "@robert-brightline/plugin",
  "version": "0.0.1",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "@robert-brightline/source": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "!**/*.tsbuildinfo",
    "generators.json"
  ],
  "nx": {
    "targets": {
      "build": {
        "executor": "@nx/js:tsc",
        "outputs": [
          "{options.outputPath}"
        ],
        "options": {
          "outputPath": "plugins/plugin/dist",
          "main": "plugins/plugin/src/index.ts",
          "tsConfig": "plugins/plugin/tsconfig.lib.json",
          "rootDir": "plugins/plugin/src",
          "generatePackageJson": false,
          "assets": [
            {
              "input": "./plugins/plugin/src",
              "glob": "**/!(*.ts)",
              "output": "."
            },
            {
              "input": "./plugins/plugin/src",
              "glob": "**/*.d.ts",
              "output": "."
            }
          ]
        }
      }
    }
  },
  "dependencies": {
    "@nx/devkit": "22.3.3",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "vitest": "^4.0.8"
  },
  "generators": "./generators.json"
}